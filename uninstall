#!/bin/bash

osId=$(lsb_release -i)

if [ "$osId"=="CentOS" ]
then
path=$(rpm -qa gridwiz)
else
path=$(dpkg --get-selections | grep gridwiz)
path=${path%" "}
fi

if [ -z "$path" ]
then
  echo "The Package does not exist."
  exit
fi

while true; do
read -p "Uninstall Package [y/n] " ans

case $ans in
  [Yy]* )
  if [ "$osId"="CentOS" ]
  then
  rpm -e $path;
  else
  dpkg -r $path
  fi
  rm -rf /usr/local/bin/config
  rm -rf /usr/local/gridwiz
  rm -rf ~/rpmbuild
  rm -rf ~/rpmbuild_debian

  echo "The Pacakge was removed";
  break;;
  [Nn]* ) exit;;
  * ) echo "Press answer y or n";; 
  esac
done

